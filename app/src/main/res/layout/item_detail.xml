<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:contentPadding="7dp">

    <LinearLayout
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageCompany"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_search_black_24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dispaly_nameCompany"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="Display Name Company"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dispaly_nameCompany"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dispaly_nameCompany"
                android:layout_marginTop="50dp"
                android:text="Type_Bus"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dispaly_nameCompany"
                android:layout_alignStart="@+id/dispaly_nameCompany"
                android:layout_centerVertical="true"
                android:text="Type_Food"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/hotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dispaly_nameCompany"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dispaly_nameCompany"
                android:layout_marginTop="125dp"
                android:text="Type_Hotels"
                android:textColor="@color/colorText"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/dispaly_nameCompany"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dispaly_nameCompany"
                android:layout_marginTop="160dp"
                android:text="Price"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>